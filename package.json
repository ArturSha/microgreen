{
  "name": "microgreen",
  "private": true,
  "homepage": "https://ArturSha.github.io/microgreen/",
  "version": "0.0.11",
  "type": "module",
  "scripts": {
    "start": "vite --open",
    "start:dev": "npx cross-env VITE_IS_LOCAL=true vite --open",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "build": "tsc -b && vite build",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:ts:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "lint:css": "npx stylelint \"**/*.css\"",
    "lint:css:fix": "npx stylelint \"**/*.css\" --fix",
    "prettier": "npx prettier --write **/*.{ts,tsx}",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@reduxjs/toolkit": "^2.9.0",
    "classnames": "^2.5.1",
    "react": "^19.1.1",
    "react-date-picker": "^12.0.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "react-select": "^5.10.2"
  },
  "devDependencies": {
    "@conarti/eslint-plugin-feature-sliced": "^2.0.0-rc.2",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-no-px": "^2.1.0",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
